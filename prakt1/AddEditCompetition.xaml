<Window x:Class="prakt1.AddEditCompetition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prakt1"
        mc:Ignorable="d"
        Title="AddEditCompetition" Height="280" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <StackPanel Margin="10">
                <TextBlock Text="Название:" Margin="0,10,0,0" />
                <TextBox x:Name="NameCompetitionTextBox"/>

                <TextBlock Text="Дата соревнования:" Margin="0,10,0,0" />
                <DatePicker x:Name="DateCompetition" />

                <TextBlock Text="Место:" Margin="0,10,0,0" />
                <TextBox x:Name="LocationCompetitionTextBox"/>

                <TextBlock Text="Код вида спорта:" Margin="0,10,0,0" />
                <TextBox x:Name="SportIdCompetitionTextBox" PreviewTextInput="SportIdCompetitionTextBox_PreviewTextInput"/>

                <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Margin="0,20,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
