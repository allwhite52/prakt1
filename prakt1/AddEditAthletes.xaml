<Window x:Class="prakt1.AddEditAthletes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prakt1"
        mc:Ignorable="d"
        Title="AddEditAthletes" Height="400" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Имя:" Margin="0,10,0,0" />
            <TextBox x:Name="FirstNameAthletesTextBox"/>

            <TextBlock Text="Отчество:" Margin="0,10,0,0" />
            <TextBox x:Name="MiddleNameAthletesTextBox" />

            <TextBlock Text="Фамилия:" Margin="0,10,0,0" />
            <TextBox x:Name="LastNameAthletesTextBox"/>

            <TextBlock Text="Год рождения:" Margin="0,10,0,0" />
            <TextBox x:Name="BirthYearAthletesTextBox" PreviewTextInput="BirthYearAthletesTextBox_PreviewTextInput"/>

            <TextBlock Text="Команда:" Margin="0,10,0,0" />
            <TextBox x:Name="TeamAthletesTextBox"/>

            <TextBlock Text="Разряд:" Margin="0,10,0,0" />
            <TextBox x:Name="CategoryAthletesTextBox"/>

            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Window>
